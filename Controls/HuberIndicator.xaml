<controls:SceneControl xmlns:controls="clr-namespace:MeasureConsole.Controls"
    x:Class="MeasureConsole.Controls.HuberIndicator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MeasureConsole.Controls"
             mc:Ignorable="d" 
             >
    <Grid>
        <TextBox x:Name="tbHuberT" Text="0.00" 
                 VerticalContentAlignment="Center" 
                 IsReadOnly="True" BorderBrush="{x:Null}" 
                 HorizontalContentAlignment="Center" Foreground="Red" Background="{x:Null}" 
                 FontSize="14" Margin="10,10,10,10"/>
    </Grid>
</controls:SceneControl>
