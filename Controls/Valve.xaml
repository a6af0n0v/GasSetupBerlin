<controls:SceneControl  xmlns:controls="clr-namespace:MeasureConsole.Controls"
             x:Class="MeasureConsole.Controls.Valve"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MeasureConsole"
             mc:Ignorable="d" 
             >
    <Grid >
       
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <Label x:Name="lbChannel" >Ch:</Label>
            <Label x:Name="controLabel">Gas 1</Label>
        </StackPanel>
        
        
        <Button Grid.Column="1" x:Name="btn" Click="btn_Click" >
            <Image x:Name="img" Source="/icons/valve_off.png" ></Image>
        </Button>
    </Grid>

</controls:SceneControl>
