<UserControl x:Class="MeasureConsole.Scene.Scene"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MeasureConsole.Scene"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800" Initialized="UserControl_Initialized">
    <Canvas x:Name="mainCanvas" >
        
        <Image x:Name="iBackground" Source="/Scene/notfound.png" Stretch="Uniform" Width="{Binding ActualWidth, ElementName=mainCanvas}" 
           Height="{Binding ActualHeight, ElementName=mainCanvas}"></Image>
        <Label x:Name="lSchemeName" FontWeight="Bold" FontSize="14" >Default scene</Label>
    </Canvas>
</UserControl>
